<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="b">
	<!--즐겨찾기에 이미등록된 학원인지 검색  -->
	<select id="bookmark_one" resultType="vo.BookMarkVO" parameterType="vo.BookMarkVO">
		select * from bookmark_view where m_idx = #{m_idx} and a_idx = #{a_idx}
	</select>
	
	<!--즐겨찾기에 목록추가-->
	
	<insert id="bookmark_insert" parameterType="vo.BookMarkVO">
		
		insert into bookmark values(seq_bm_idx.nextVal,#{a_idx},#{m_idx})
		
	</insert>
	
	
		<!--회원 idx별 즐겨찾기 목록 조회  -->
	<select id="bookmark_list" parameterType="int" resultType="vo.BookMarkVO">
		select * from bookmark_view where m_idx = #{m_idx}
	</select>
</mapper>























